<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CheckersWpfGrid">
    <ImageBrush x:Key="FigureBlack" ImageSource="../Images/FigureBlack.png" />
    <ImageBrush x:Key="FigureWhite" ImageSource="../Images/FigureWhite.png" />
    <ImageBrush x:Key="FigureBlackMiss" ImageSource="../Images/FigureBlackMiss.png" />
    <ImageBrush x:Key="FigureWhiteMiss" ImageSource="../Images/FigureWhiteMiss.png" />
    <Style TargetType="local:Cell">
        <Style.Triggers>
            <Trigger Property="Kind" Value="Black">
                <Setter Property="Background" Value="Black"></Setter>
            </Trigger>
            <Trigger Property="Kind" Value="White">
                <Setter Property="Background" Value="White"></Setter>
            </Trigger>
            <Trigger Property="HighlightState" Value="Available">
                <Setter Property="Background" Value="Green"></Setter>
            </Trigger>
            <Trigger Property="HighlightState" Value="Origin">
                <Setter Property="Background" Value="DarkGray"></Setter>
            </Trigger>
            <Trigger Property="HighlightState" Value="Path">
                <Setter Property="Background" Value="DarkCyan"></Setter>
            </Trigger>
            <Trigger Property="HighlightState" Value="Destination">
                <Setter Property="Background" Value="DarkGreen"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="local:Figure">
        <Style.Triggers>
            <DataTrigger
                Binding="{Binding Path=Player.Kind, RelativeSource={RelativeSource Mode=Self}}"
                Value="Black">
                <Setter Property="Sprite" Value="{StaticResource FigureBlack}"></Setter>
            </DataTrigger>
            <DataTrigger
                Binding="{Binding Path=Player.Kind, RelativeSource={RelativeSource Mode=Self}}"
                Value="White">
                <Setter Property="Sprite" Value="{StaticResource FigureWhite}"></Setter>
            </DataTrigger>
            

            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition
                        Binding="{Binding Path=Player.Kind, RelativeSource={RelativeSource Mode=Self}}"
                        Value="Black">
                    </Condition>
                    <Condition Binding="{Binding Path=Strategy.Name, RelativeSource={RelativeSource Mode=Self}}"
                               Value="Miss">
                    </Condition>
                </MultiDataTrigger.Conditions>
                <Setter Property="Sprite" Value="{StaticResource FigureBlackMiss}"></Setter>
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition
                        Binding="{Binding Path=Player.Kind, RelativeSource={RelativeSource Mode=Self}}"
                        Value="White">
                    </Condition>
                    <Condition Binding="{Binding Path=Strategy.Name, RelativeSource={RelativeSource Mode=Self}}"
                               Value="Miss">
                    </Condition>
                </MultiDataTrigger.Conditions>
                <Setter Property="Sprite" Value="{StaticResource FigureWhiteMiss}"></Setter>
            </MultiDataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>